@model IEnumerable<ShopIn.Core.Models.Product>
@{ 
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="col-md-12">

    @foreach (var item in Model)
    {
        <div class="col-md-4" style="height:400px; width:300px; padding: 10px; margin: 10px; border: solid thin white">
            <div class="col-md-12">
                <img class="img img-responsive" style="height:250px" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { Id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <p>@item.Price</p>
            </div>
            <div class="col-md-12">
                <a class="btn btn-default">Add to Basket</a>
            </div>
        </div>
    }


</div>

<div class="col-md-12 clearfix"/>